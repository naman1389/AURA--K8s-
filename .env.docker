# AURA K8s Docker Environment Configuration
# This file is used by docker-compose.yml

# Database Configuration (Docker internal networking)
DATABASE_URL=postgresql://aura:aura_password@timescaledb:5432/aura_metrics?sslmode=disable
POSTGRES_USER=aura
POSTGRES_PASSWORD=aura_password
POSTGRES_DB=aura_metrics

# Service Ports (exposed to host)
COLLECTOR_PORT=9090
REMEDIATOR_PORT=9091
ML_SERVICE_PORT=8001
MCP_SERVER_PORT=8000
GRAFANA_PORT=3000

# Service URLs (Docker internal networking)
ML_SERVICE_URL=http://ml-service:8001
MCP_SERVER_URL=http://mcp-server:8000

# Kubernetes Configuration
K8S_NAMESPACE=aura-system

# Collection Settings
COLLECTION_INTERVAL=15s
PREDICTION_INTERVAL=30

# ML Configuration
MODEL_PATH=/app/ml/train/models
CONFIDENCE_THRESHOLD=0.50

# Ollama Configuration (Docker internal networking)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2

# Logging
LOG_LEVEL=info

# Schema Initialization
SKIP_SCHEMA_INIT=false

# Remediation Settings
MAX_REMEDIATION_RATE=10
RATE_LIMIT_BURST=5
